<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Banking</base>
  <class>BankAccount</class>
  <name>civicrm_bank_account</name>
  <log>true</log>
  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>ID</comment>
    <export>true</export>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>description</name>
    <title>Description</title>
    <type>varchar</type>
    <length>255</length>
    <comment>Purpose or use of the bank account</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>created_date</name>
    <title>Date created</title>
    <type>datetime</type>
    <required>true</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>
  <field>
    <name>modified_date</name>
    <title>Date modified</title>
    <type>datetime</type>
    <required>true</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>data_raw</name>
    <type>text</type>
    <comment>The complete information received for this bank account</comment>
    <html>
      <type>TextArea</type>
    </html>
  </field>

  <field>
    <name>data_parsed</name>
    <type>text</type>
    <comment>A JSON-formatted array containing decoded fields</comment>
    <html>
      <type>TextArea</type>
    </html>
  </field>


  <field>
    <name>contact_id</name>
    <title>Contact ID</title>
    <type>int unsigned</type>
    <comment>FK to contact owning this account</comment>
    <html>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>


</table>
