<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Banking</base>
  <class>BankTransactionBatch</class>
  <name>civicrm_bank_tx_batch</name>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>ID</comment>
    <export>true</export>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>issue_date</name>
    <title>Issue date</title>
    <type>datetime</type>
    <required>true</required>
    <comment>When the statement was issued</comment>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>reference</name>
    <title>Statement Reference</title>
    <export>true</export>
    <type>varchar</type>
    <length>64</length>
    <required>true</required>
    <unique>true</unique>
    <comment>The unique reference for this statement</comment>
    <html>
      <type>Text</type>
    </html>
  </field>
  <index>
    <name>reference</name>
    <fieldName>reference</fieldName>
    <unique>unique</unique>
  </index>

  <field>
    <name>sequence</name>
    <type>int</type>
    <title>Bank Statement sequence</title>
    <required>true</required>
    <comment>Used to maintain ordering and consistency</comment>
    <html>
      <type>Number</type>
    </html>
  </field>

  <field>
    <name>starting_balance</name>
    <title>Starting Balance</title>
    <type>decimal</type>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>ending_balance</name>
    <title>Ending Balance</title>
    <type>decimal</type>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>currency</name>
    <title>Currency</title>
    <type>varchar</type>
    <length>3</length>
    <comment>Currency</comment>
    <dataPattern>/^[A-Z]{3}$/i</dataPattern>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>tx_count</name>
    <type>int</type>
    <title>Transaction Count</title>
    <required>true</required>
    <html>
      <type>Number</type>
    </html>
  </field>

  <field>
    <name>starting_date</name>
    <title>Start date</title>
    <type>datetime</type>
    <comment>Start date of the statement period</comment>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>ending_date</name>
    <title>End date</title>
    <type>datetime</type>
    <comment>End date of the statement period</comment>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

</table>
