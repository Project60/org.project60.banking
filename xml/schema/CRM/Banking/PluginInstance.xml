<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Banking</base>
  <class>PluginInstance</class>
  <name>civicrm_bank_plugin_instance</name>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>ID</comment>
    <export>true</export>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>plugin_type_id</name>
    <type>int unsigned</type>
    <title>Plugin type</title>
    <required>true</required>
    <comment>Link to an option list of plugin types</comment>
    <pseudoconstant>
      <optionGroupName>civicrm_banking.plugin_types</optionGroupName>
      <keyColumn>id</keyColumn>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>plugin_class_id</name>
    <type>int unsigned</type>
    <title>Plugin class name</title>
    <required>true</required>
    <comment>Link to an option list of plugin class names</comment>
    <pseudoconstant>
      <optionGroupName>civicrm_banking.plugin_classes</optionGroupName>
      <keyColumn>id</keyColumn>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>name</name>
    <title>Name</title>
    <type>varchar</type>
    <length>255</length>
    <comment>Name of the plugin</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>description</name>
    <title>Description</title>
    <type>text</type>
    <comment>Short description of what the plugin does</comment>
    <html>
      <type>TextArea</type>
    </html>
  </field>

  <field>
    <name>enabled</name>
    <type>boolean</type>
    <required>true</required>
    <default>1</default>
    <comment>If this plugin is enabled</comment>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>weight</name>
    <type>float</type>
    <required>true</required>
    <default>100.0</default>
    <comment>Relative weight of this plugin</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>config</name>
    <type>text</type>
    <comment>Configuration JSON</comment>
    <html>
      <type>TextArea</type>
    </html>
  </field>

  <field>
    <name>state</name>
    <type>text</type>
    <comment>State JSON</comment>
    <html>
      <type>TextArea</type>
    </html>
  </field>

</table>
